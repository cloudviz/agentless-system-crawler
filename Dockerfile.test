FROM ubuntu:14.04

RUN apt-get update && echo "y" | apt-get install apt-transport-https
RUN apt-key adv --keyserver hkp://p80.pool.sks-keyservers.net:80 --recv-keys 58118E89F3A912897C070ADBF76221572C52609D
RUN echo "deb https://apt.dockerproject.org/repo ubuntu-trusty main" > /etc/apt/sources.list.d/docker.list

RUN apt-get update && \
    echo "y" | apt-get install python \
    python-dev \
    python-pip \
    build-essential \
    qemu-kvm \
    docker-engine \
    dpkg \
    dpkg-dev \
  && pip install --upgrade pip 

WORKDIR /crawler
COPY requirements.txt /crawler/requirements.txt
COPY requirements-test.txt /crawler/test-requirements.txt
 
RUN (pip install -r requirements.txt; pip install -r test-requirements.txt)

ADD . /crawler

RUN (cd psvmi/psvmi; python setup.py build && python setup.py install)

COPY psvmi/maps maps
COPY psvmi/offsets offsets
COPY psvmi/header.h .

CMD (docker daemon > ../docker.out 2>&1 &) && \
    sleep 5 && \
        flake8 --max-complexity 10 . || true && \
        pylint crawler || true && \
        python setup.py test --addopts '-s --cov=.'

